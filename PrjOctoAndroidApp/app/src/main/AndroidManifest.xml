<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.prjoctoandroidapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/octo_logo_v2"
        android:label="@string/Octo"
        android:roundIcon="@mipmap/octo_logo_v2_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PrjOctoAndroidApp">
        <activity
            android:name=".AddPlayerActivity"
            android:exported="false" />
        <activity
            android:name=".QuestionsAndAnswersActivity"
            android:exported="false" />
        <activity
            android:name=".PlaygroundActivity"
            android:exported="false" />
        <activity
            android:name=".UserAccountActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".Registration"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>